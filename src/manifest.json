{
  "manifest_version": 2,

  "name": "__MSG_application_name__",
  "description": "__MSG_application_description__",
  "version": "0.0.0",

  "icons": {
    "16": "img/icons/16.png",
    "48": "img/icons/48.png",
    "128": "img/icons/128.png"
  },

  "default_locale": "en",

  "browser_action": {
    "default_title": "__MSG_default_title__",
    "default_icon": "img/icons/48.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "*://api.edmunds.com/*"
  ],

  "background": {
    "page": "background.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "lib/jquery/jquery.js",
      "lib/underscore/underscore.js",
      "js/content.js"
    ],
    "css": [
      "css/panel.css"
    ]
  }]

}
